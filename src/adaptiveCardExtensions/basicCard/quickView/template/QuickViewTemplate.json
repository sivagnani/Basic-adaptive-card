{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Container",
      "$data": "${contactsList}",
      "separator": true,
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "**${Name}**",
                  "color": "Dark",
                  "size": "Medium",
                  "wrap": true,
                  "maxLines": 2,
                  "spacing": "None"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Email: ${Email}",
                  "color": "Dark",
                  "size": "small",
                  "wrap": true,
                  "maxLines": 2,
                  "spacing": "None"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Mobile: ${Mobile}",
                  "color": "Dark",
                  "size": "small",
                  "wrap": true,
                  "maxLines": 2,
                  "spacing": "None"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Landline: ${Landline}",
                  "color": "Dark",
                  "size": "small",
                  "wrap": true,
                  "maxLines": 2,
                  "spacing": "None"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Website: ${Website}",
                  "color": "Dark",
                  "size": "small",
                  "wrap": true,
                  "maxLines": 2,
                  "spacing": "None"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Address: ${Address}",
                  "color": "Dark",
                  "size": "small",
                  "wrap": true,
                  "maxLines": 2,
                  "spacing": "None"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}